<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tanvi.myway.third"
    android:background="#fffefe">

    <TextView
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="First Aid Help"
        android:id="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="24dp"
        android:typeface="serif"
        android:textColor="#06731a" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="798dp"
        android:layout_marginEnd="798dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_row="3"
            android:layout_column="2"
            android:src="@drawable/image1" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:minWidth="12dp"
        android:minHeight="12dp"
        android:background="#fffefe">

        <ImageButton
            android:layout_width="154dp"
            android:layout_height="148dp"
            android:id="@+id/i1"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/t1"
            android:scaleType="fitXY"
            android:clickable="true"
            android:longClickable="true"
            android:visibility="visible"
            android:layout_gravity="left|fill_vertical"
            android:baselineAlignBottom="true"
            android:focusable="true"
            android:background="#dad2d2" />

        <ImageButton
            android:layout_width="154dp"
            android:layout_height="148dp"
            android:id="@+id/i2"
            android:layout_row="0"
            android:layout_column="4"
            android:src="@drawable/image2"
            android:clickable="true"
            android:scaleType="center"
            android:longClickable="true"
            android:background="#dad2d2"
            android:contextClickable="true"
            android:tintMode="multiply"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="First-Aid Tips\n\n"
            android:id="@+id/textView13"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#930707"
            android:typeface="serif"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Injuries"
            android:id="@+id/textView16"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_rowSpan="2"
            android:textColor="#930707"
            android:typeface="serif"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="158dp"
            android:layout_height="139dp"
            android:id="@+id/i3"
            android:layout_row="3"
            android:layout_column="0"
            android:src="@drawable/image3"
            android:clickable="true"
            android:scaleType="fitXY"
            android:longClickable="true"
            android:layout_marginBottom="23dp"
            android:nestedScrollingEnabled="true"
            android:scrollIndicators="bottom"
            android:contextClickable="true"
            android:background="#dad2d2" />

        <ImageButton
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:id="@+id/i4"
            android:layout_row="3"
            android:layout_column="4"
            android:src="@drawable/images4"
            android:scaleType="center"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:maxWidth="78dp"
            android:longClickable="true"
            android:baselineAlignBottom="true"
            android:accessibilityLiveRegion="none"
            android:background="#dad2d2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Burn and Bleeding"
            android:id="@+id/textView17"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="#930707"
            android:typeface="serif"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Safety Measures"
            android:id="@+id/textView18"
            android:layout_row="4"
            android:layout_column="4"
            android:textColor="#930707"
            android:typeface="serif"
            android:textStyle="bold" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="source: Google Images"
        android:id="@+id/textView32"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="8dp" />

</RelativeLayout>